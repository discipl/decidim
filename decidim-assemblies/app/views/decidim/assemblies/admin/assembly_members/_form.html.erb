<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.text_field :full_name, autofocus: true %>
    </div>

    <div class="row column">
      <% picker_options = { id: "decidim_assemblies_assembly_members_user", class: "picker-multiple", name: "assembly_member[user_id]", multiple: false }
         prompt_params= { url: users_assembly_members_url(assembly_slug: @current_assembly.slug), text: t(".select_user") } %>
      <%= form.data_picker(:user, picker_options, prompt_params) {|item| { url: "users", text: "#{item.name} (@#{item.nickname})" }} %>
    </div>

    <div class="row column">
      <%= form.select :position, @form.positions_for_select, { include_blank: t(".select_a_position") }, { multiple: false } %>
    </div>

    <div class="row column">
      <%= form.text_field :position_other %>
    </div>

    <div class="row column">
      <%= form.number_field :weight %>
    </div>

    <div class="row column">
      <%= form.date_field :designation_date %>
    </div>

    <div class="row column">
      <%= form.text_field :designation_mode %>
    </div>

    <div class="row column">
      <%= form.date_field :ceased_date %>
    </div>

    <div class="row column">
      <%= form.select :gender, @form.genders_for_select, { include_blank: t(".select_a_gender") }, { multiple: false } %>
    </div>

    <div class="row column">
      <%= form.date_field :birthday %>
    </div>

    <div class="row column">
      <%= form.text_field :origin %>
    </div>
  </div>
</div>

<%= javascript_include_tag "decidim/assemblies/admin/assembly_members" %>
